                    <TextView
                        android:id="@+id/textSubtitleDashboard4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Lorem Ipsum po caralhinho"
                        android:textColor="@color/black_semi_transparent"
                        android:background="#00FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textTitleDashboard4"
                        app:layout_constraintStart_toStartOf="@+id/textTitleDashboard4"
                        app:layout_constraintTop_toBottomOf="@+id/textTitleDashboard4"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="649dp"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:maxImageSize="30dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>